<h1><%= @usergoal.goal.name %>: <%= @usergoal.user.username %></h1>

<div>
    <%= @usergoal.user.full_name %>
    <%= @usergoal.user.username %>
    <%= @usergoal.frequency %>
    <%= @usergoal.completion %>
</div>

<div>
<%= @usergoal.notes %>
</div>



<% if logged_in? %>
    <%= link_to 'Edit Goal', edit_user_goal_path %>
    <%= link_to 'Did you complete your goal?', complete_path(@usergoal) %>
    <%= render 'delete_button' %>
<% end %>

<% if @errors %>
<div class="error-handling">
<% @errors.each do |error| %>
  <p class="text-center"><%= error %></p>
<% end %>
</div>
<% end %>

<div class="bg-mirage p-2 rounded">
  <%= form_for(@user , html: { class:"form-group p-3" }) do |f| %>
      
      <%= f.label :name , class:"form-label mt-1 mb-1"%>
      <%= f.text_field :full_name , class:"form-control mb-3" , placeholder: "name" %>

      <%= f.label :username %>
      <%= f.text_field :username , class:"form-control mb-3" , placeholder: "username"%>

      <%= f.label :password %>
      <%= f.password_field :password , class:"form-control mb-3" , placeholder: "password"%>

      <%= f.label :password_confirmation %>
      <%= f.password_field :password_confirmation , class:"form-control mb-3" , placeholder: "password confirm" %>

      <%= f.label :city %>
      <%= f.text_field :city , class:"form-control mb-3" , placeholder: "city" %>

      <%= f.label :programming_language , class:"form-label"%>
      <%= f.select :programming_language, options_for_select(User.languages) , {}, {:class => 'form-control mb-3'}  %> 

      <%= f.label :img_url, "Profile Picture" %>
      <%= f.text_field :img_url , class: "form-control mb-3", placeholder:".jpg / .png"%>

      <div class="text-center pt-5">
        <%= f.submit "Submit" , class:"btn btn-info btn-block p-2" %>
      </div>

      <% end %>
    </div>


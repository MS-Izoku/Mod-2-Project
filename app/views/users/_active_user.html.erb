
<div class="bg-white text-center mt-2 pt-2 pb-1 mb-3">
    <h3 class="align-block">
        <%= link_to "Add a New Goal", new_user_goal_path , class:"btn btn-info"%>
        <%= link_to "Edit Profile", edit_user_path(@user) , class:"btn btn-info"%>
        <%= link_to "Delete Profile", @user, method: :delete, data: {confirm: "Are you sure you want to delete your account?"}, class:"btn btn-info"%>
    </h3>
</div>

<div class="container">
    <div class="container">
    <% @user.user_goals.each do |user_goal| %>
        <div class="bg-info shadow-lg rounded mb-2 mt-2 pt-1 pb-1">
            <div class="bg-white rounded mx-1">
                <h2 class="text-center pt-1 pb-1"><%= link_to user_goal.goal.name, user_goal_path(user_goal) %></h2>
            </div>
        </div>
    <% end %>
    </div>
</div>





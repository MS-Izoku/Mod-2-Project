<div class="container bg-danger pb-2">
<h2 class="text-center">Progress Updates</h2>
<%= link_to 'New Update!' , new_progress_update_path %>

<% @progress_updates.each do |update| %>
    <div class="bg-secondary">
        <h4><%= link_to update.user_goal.user.username , user_path(update.user_goal.user) %></h4>
        <h3 class="text-center pb-4 pt-2"><%= link_to update.user_goal.goal.name , user_goal_path(update.user_goal) %></h3>
        
        <div>
            <h4 class="text-center"> <%= update.content %></h4>
        </div>
        
        <p class="text-center pb-1">STATUS: <%= update.goal_completion_status ? "COMPLETE" : "INCOMPLETE"  %></p>
    </div>
<% end %>
</div>